{

  "description": "Web extension verion of Copy Urls expert",
  "manifest_version": 2,
  "name": "copy-urls-expert-webextension",
  "version": "__version__",

  "applications": {
    "gecko": {
      "id": "copy-urls-expert-web-extension@kashiif.com"
    }
  },

  "options_ui": {
    "page": "options/options.html"
  },

  "permissions": [
    "tabs",
    "storage",
    "contextMenus"
  ],
  
  "background": {
    "scripts": [
      "scripts/url-formatter.js",
      "scripts/template-model.js",
      "scripts/ui.js",
      "scripts/background.js"
    ]
  },

  "browser_action": {
    "default_icon": "button/cue-icon.png"
  }

}
