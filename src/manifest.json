{
  "description": "Web extension version of Copy Urls expert",
  "manifest_version": 2,
  "name": "copy-urls-expert-web-extension",
  "version": "__version__",

  "applications": {
    "gecko": {
      "id": "copy-urls-expert-web-extension@kashiif.com"
    }
  },

  "options_ui": {
    "page": "options.html"
  },

  "permissions": [
    "tabs",
    "storage",
    "contextMenus",
    "clipboardWrite"
  ],
  
  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "19": "button/cue-icon.png",
      "38": "button/cue-icon.png"
    },
    "default_popup": "popup.html",
    "default_title": "Copy Urls Expert"
  }
}
